.contact-body{
    background-color: #fcd966;
    width: 100%;
    padding-top: 3em;
    padding-bottom: 4em;
}

.contact-line{
    margin-bottom: 0;
}

.contact-info{
    margin-top: .5em;
    text-align: center;
}

.contact-icon-wraper{
    width: 55px;
    margin: 0;
    padding: 0;
    margin: 0 auto;
}

.contact-icon-wraper-2{
    width: 45px;
    margin: 0;
    padding: 0;
    margin: 0 auto;
}

.contact-icon-wraper-3{
    width: 50px;
    margin: 0;
    padding: 0;
    margin: 0 auto;
}

.contact-element{
    margin-bottom: 2em;
}

form {
    padding: 0;
}

.contact-form-input{
    width: 100%;
    float: left;
    border: none;
    background-color: #fef1c8;
    padding: 2px 5px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

.contact-textarea{
    width: 100%;
    height: 10em;
    resize: none;
}

.contact-form-btn{
    background-color: #fef1c8;
    width: 100%;
    border: none;
    color: #5f5f5f;
    font-weight: bold;
}

.contact-form-btn:hover{
    background-color: #fcd966;
}

.contact-form-message{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: white; 
    z-index: 10;
}

.contact-thx-message{
    width: 100%;
    text-align: center;
}

footer {
    background-color: #424242;
    
}

footer .col-md-6{
    padding-top: 2em;
    padding-bottom: 3em;
}

.contact-social-icons{
    color: white;
}

.contact-social-icons i {
    margin-right: 1em;
}

.contact-social-icons i:hover {
    transition: 0.2s;
    color: rgba(255, 234, 119, 1);
}

.contact-social-icons * {
    float: right;
}

.social-find-me{
    padding: 0.5em 1.5em;
}

.footer-text{
    color: #a7a7a7;
}

footer a:visited{
    color: white;
}
footer a{
    color: white;
}