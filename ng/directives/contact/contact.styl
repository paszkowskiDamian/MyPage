.contact-body{
    background-color: #fcd966;
    width: 100%;
    padding-top: 3em;
    padding-bottom: 4em;
}

.contact-line{
    margin-bottom: 0;
}

.contact-info{
    margin-top: .5em;
    text-align: center;
}

.contact-icon-wraper{
    width: 55px;
    margin: 0;
    padding: 0;
    margin: 0 auto;
}

.contact-icon-wraper-2{
    width: 45px;
    margin: 0;
    padding: 0;
    margin: 0 auto;
}

.contact-icon-wraper-3{
    width: 50px;
    margin: 0;
    padding: 0;
    margin: 0 auto;
}

.contact-element{
    margin-bottom: 2em;
}

form {
    padding: 0;
}

.contact-form-input{
    width: 100%;
    float: left;
    border: none;
    background-color: #fef1c8;
    padding: 2px 5px;
    margin-bottom: 10px;
    box-sizing: border-box;
}

.contact-textarea{
    width: 100%;
    height: 10em;
    resize: none;
}

.contact-form-btn{
    background-color: #fef1c8;
    width: 100%;
    border: none;
}